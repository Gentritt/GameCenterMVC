@model IEnumerable<GameCenterMVC.Models.Client>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<link href="~/Content/Table.css" rel="stylesheet" />
<h2>Manage Members </h2>
<th>
	<a href="@Url.Action("Create","Client")" @*asp-action="Create"*@ class="btn btn-primary text-white"> <i class="fa fa-plus-circle"></i> New Member</a>
	@*</th>
		.Action("Create","Client")" asp-action="Create" class="btn btn-primary text-white"> <i class="fa fa-plus-circle"></i> New Member</a>
		</th>*@
	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.InsertBy)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.InsertDate)
			</th>
			<!--<th>
				@Html.DisplayNameFor(model => model.UpdateBy)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UpdateDate)
			</th>-->
