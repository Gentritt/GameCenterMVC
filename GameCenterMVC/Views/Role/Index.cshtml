@model IEnumerable<GameCenterMVC.Models.Roles>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<link href="~/Content/Table.css" rel="stylesheet" />
<h2>Manage Roles</h2>
<th>
	<a href="@Url.Action("Create","Role")" @*asp-action="Create"*@ class="btn btn-primary text-white"> <i class="fa fa-plus-circle"></i> New Role</a>
</th>
@*<p>
		@Html.ActionLink("Create New", "Create")
	</p>*@
<table class="container">
	<thead>
		<tr class="header">
			<th>
				@Html.DisplayNameFor(model => model.InsertBy)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.InsertDate)
			</th>
			@*<th>
					@Html.DisplayNameFor(model => model.UpdateBy)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.UpdateDate)
				</th>*@
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.InsertBy)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.InsertDate)
				</td>
				@*<td>
						@Html.DisplayFor(modelItem => item.UpdateBy)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UpdateDate)
					</td>*@
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.ActionLink("Update", "Update", new { id = item.RoleID }, new { @class = "btn btn-warning" })
					<a onclick="Delete(@item.RoleID)" ( class="btn btn-danger"><i class="fa fa-trash-o"></i>Delete</a>
				</td>
			</tr>
		}

</table>
@section scripts{
	<script>
    $(function () {
        var SuccessMessage = '["Success"]'
        if (SuccessMessage != '')
            alertify.success(SuccessMessage);

    });

    function Delete(id) {
        alertify.confirm('Warning !!', 'Are You Sure To Delete This Record ?', function () {
            window.location.href = '@Url.Action("Remove","Role")/' + id;
        }, null);
    }
	</script>

}