@model IEnumerable<GameCenterMVC.Models.Roles>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <h2>Manage Roles</h2>
    <hr />
    <div class="panel-body">
        <div class="btn-group">
            <a href="@Url.Action("Create","Role")" , class="btn btn-primary">
                <i class="fa fa-plus-circle"></i> Add role
            </a>
        </div>
        <hr />
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed alert-dark">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.RoleID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                <a href="@Url.Action("Update", "Role", new { id = item.RoleID })"
                                   class="btn btn-info">
                                    <i class="fa fa-edit"></i>  Edit
                                </a>
                                <a onclick="Delete(@item.RoleID)" ( class="btn btn-danger"><i class="fa fa-trash-o"></i>Delete</a>
                                @*<i class="glyphicon glyphicon-trash"></i>  Delete*@

                            </td>
                        </tr>
                    }


                }
                else
                {
                    <h2>No Data</h2>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
	<script>
    $(function () {
        var SuccessMessage = 'Success'
        if (SuccessMessage != '')
            alertify.success(SuccessMessage);

    });

    function Delete(id) {
        alertify.confirm('Warning !!', 'Are You Sure To Delete This Record ?', function () {
            window.location.href = '@Url.Action("Remove","Role")/' + id;
        }, null);
    }
	</script>

}