@model IEnumerable<GameCenterMVC.Models.Computer>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
	<div class="panel-heading panel-head">Manage Computers</div>
	<div class="panel-body">
		<div class="btn-group">
			<a href="@Url.Action("Create","Computer")" , class="btn btn-primary">
				<i class="fa fa-plus-circle"></i> Add Computer
			</a>
		</div>
		<div class="top-buffer"></div>
		<table class="table table-bordered table-striped table-condensed alert-dark">
			<thead>
				<tr>
					<th>ID</th>
					<th>PartID</th>
					<th>PricePerHour</th>
				</tr>
			</thead>
			<tbody>

				@if (Model.Count() > 0)
				{
					foreach (var item in Model)
					{
						<tr>
							<td>@Html.DisplayFor(modelItem => item.ComputerID)</td>
							<td>@Html.DisplayFor(modelItem => item.ComputerPartID)</td>
							<td>@Html.DisplayFor(modelItem => item.PricePerHour)</td>
							<td>
								<a href="@Url.Action("Update", "Computer", new { id = item.ComputerID })"
								   class="btn btn-info">
									<i class="fa fa-edit"></i>  Edit
								</a>
								<a onclick="Delete(@item.ComputerID)" ( class="btn btn-danger"><i class="fa fa-trash-o"></i>Delete</a>
								@*<i class="glyphicon glyphicon-trash"></i>  Delete*@

							</td>
						</tr>
					}


				}
				else
				{
					<h2>No Data</h2>
				}
			</tbody>
		</table>
	</div>
</div>

@section Scripts{


	<script>
        $(function () {
        var SuccessMessage = 'Success'
        if (SuccessMessage != '')
            alertify.success(SuccessMessage);

    });

    function Delete(id) {
            alertify.confirm('customer Management System', 'Are You Sure To Delete This Record ?', function () {
                window.location.href = '@Url.Action("Remove","Computer")/' + id;
            }, null);
    }
	</script>

} 