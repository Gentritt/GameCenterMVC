@model IEnumerable<GameCenterMVC.Models.Employee>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
	@*<link href="~/Content/Table.css" rel="stylesheet" />*@
	@*<link href="~/Content/Table/TableSpacing.css" rel="stylesheet" />*@
<div class="top-buffer"></div>
<div class="panel panel-primary">
	<h2>Manage Employees</h2>
	<hr />
	<div class="panel-body">
		<div class="btn-group">
			<a href="@Url.Action("Create","Employe")" , class="btn btn-outline-danger">
				<i class="fa fa-plus-circle"></i>  Add Employe
			</a>
		</div>
		<hr />
		<div style="overflow-x:auto;"</div>
		<table class="table table-bordered table-striped table-condensed table-dark bg-dark ">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Lastname</th>
					<th>PersonalID</th>
					<th>Role</th>
					<th>Adress</th>
					<th>Birthday</th>
					<th>Phonenumber</th>
					<th>Email</th>
					<th>Username</th>
					<th>Password</th>
					<th>Paycheck</th>

				</tr>
			</thead>
			<tbody>

				@if (Model.Count() > 0)
				{
					foreach (var item in Model)
					{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.EmployeeID)</td>
					<td>@Html.DisplayFor(modelItem => item.Name)</td>
					<td>@Html.DisplayFor(modelItem => item.LastName)</td>
					<td>@Html.DisplayFor(modelItem => item.PersonalID)</td>
					<td>@Html.DisplayFor(modelItem => item.RoleName)</td>
					<td>@Html.DisplayFor(modelItem => item.Address)</td>
					<td>@Html.DisplayFor(modelItem => item.Birthday)</td>
					<td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
					<td>@Html.DisplayFor(modelItem => item.Email)</td>
					<td>@Html.DisplayFor(modelItem => item.UserName)</td>
					<td>@Html.DisplayFor(modelItem => item.Password)</td>
					<td>@Html.DisplayFor(modelItem => item.PayCheck)</td>

					<td>
						<a href="@Url.Action("Edit", "Employe", new { id = item.EmployeeID })"
						   class="btn btn-info">
							<i class="fa fa-edit"></i>  Edit
						</a>
					</td>
					<td>
						<a href="@Url.Action("Details", "Employe", new { id = item.EmployeeID })"
						   class="btn btn-info" data-target="#MyModal" data-toggle="modal">
							<i class="fa fa-edit"></i> Details
						</a>
					</td>
					<td>
						<a onclick="Delete(@item.EmployeeID)" ( class="btn btn-danger"><i class="fa fa-trash-o"></i>Delete</a>
						@*<i class="glyphicon glyphicon-trash"></i>  Delete*@

					</td>
				</tr>
					}


				}
				else
				{
					<h2>No Data</h2>
				}
			</tbody>
		</table>
	</div>
</div>

@section scripts{
	<script>
    $(function () {
        var SuccessMessage = 'Success'
        if (SuccessMessage != '')
            alertify.success(SuccessMessage);

    });

    function Delete(id) {
        alertify.confirm('customer Management System', 'Are You Sure To Delete This Record ?', function () {
            window.location.href = '@Url.Action("Delete","Employe")/' + id;
        }, null);
    }
	</script>
	<script src="~/Scripts/Modal/ResetModal.js"></script>

}

<link href="~/Content/Modal/Modal.css" rel="stylesheet" />
<div class="container">

	<div class="modal" id="MyModal" role="dialog" data-keyboard="false" data-backdrop="static">
		<div class="modal-dialog">

			<div class="modal-content">
				<div class="modal-header">
					<button class="close" data-dismiss="modal">&times;</button>
					<h4>DemoModalTitle</h4>
				</div>
			</div>
		</div>
	</div>
</div>
